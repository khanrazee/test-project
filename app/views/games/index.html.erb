<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td>
          <% game.images.each do |image| %>
          <img class="img" src="<%= url_for(image) %>">
          <%end %>
        </td>
        <td><%= link_to 'Play', game_path(game) %></td>
        <td><%= link_to 'Destroy', game_path(game), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
